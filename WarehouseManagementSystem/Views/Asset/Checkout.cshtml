@model CheckoutViewModel

<div class="container">
    <div class="header clearfix detailHeading">
        <h2 class="text-muted">Checkout Library Item</h2>
    </div>

    <div class="jumbotron">
        <div class="row">
            <div class="col-md-3">
                <div>
                    <p id="itemTitle">@Model.Name</p>
                    <img class="detailImage" src="@Model.ImageUrl" style="width:300px; height:350px;"/>
                </div>
            </div>
            <div class="col-md-9">
                <form asp-action="PlaceCheckout" asp-controller="Asset" class="mt-5">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="AssetId" hidden/>
                    <div class="form-group">
                        <label asp-for="WECardId" class="control-label"></label>
                        <input asp-for="WECardId" class="form-control" required placeholder="Please enter WECard ID"/>
                        <span asp-validation-for="WECardId" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-5">
                        <input type="submit" value="Register" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-primary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
